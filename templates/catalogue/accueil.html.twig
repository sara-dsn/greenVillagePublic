      <img alt="{{ rubrique.libelle }}" class="img-fluid rubrique" src="{{asset('rubrique/'~ rubrique.photo )}}">
    </a>
  {% endfor %}
</div>

<h2 class="text-center titre mb-5"> Découvrez nos meilleures ventes</h2>
<div class="d-flex flex-row justify-content-center  ">
    {% set i=1 %}
    {% for instrument in instruments %}
        <div class="card cardInvisible mb-3 mx-2 col-md-3 " >
            <div class="card-body h-100 ">
                <div class="d-flex flex-row h-75">
                    <img alt="top {{i}}" class="img-fluid col-6 h-50 w-25" src="{{asset('top/top'~ i ~'.png')}}">
                    <img class="img-fluid col-6 w-50 " alt="{{ instrument.libelle }}" src="{{asset('instrument/'~ instrument.photo.sansFond) }}">
                </div>
                <div class="h-25 ">
                    <h5 class="card-title text-center textVert">{{ instrument.libelle }}</h5>
                    <div class="d-flex flex-row-reverse mr-4">
                        <p class="card-text mx-5 textVert">à {{ instrument.prixHt }}€</p>
                    </div>
                    {# <a href="#" class="btn "><img alt="ajouter au panier" class="img-fluid" src="{{asset('image/icone/caddie.png')}}"></a> #}
